<div class="container">
    <h1 style="text-align:center;">{{client.name}}</h1>
    <div class="donations">
        <style>
            .charity-name{
                display: block;
            }
            .client-name{
                display: none;
            }
        </style>
        {{#each donations}}
        <a href="/charities/{{this.charity}}">
            {{>donation}}
        </a>
        {{/each}}
    </div>

    <hr>
    <a href="/clients/{{client._id}}/edit"><button class="btn btn-warning">edit</button></a>
    <form method="POST" action="/clients/{{client._id}}?_method=DELETE">
        <button class="btn btn-danger" type="submit">Delete Client</button>
    </form>
</div>