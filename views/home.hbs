
<div id="search">
    <form action="/">
        <input type="text" name="term">
        <button type="submit">Search</button>
    </form>
    <div class="charities">
        {{#each charities}}
        <a href="/charities/{{this.ein}}"<h3>{{this.charityName}}</h3>
        <p>{{this.currentRating.rating}}</p>
        {{/each}}
    </div>
</div>

