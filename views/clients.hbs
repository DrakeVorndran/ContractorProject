{{#each clients}}
<div class="client">
    <h1>{{this.name}}</h1>
    <form method="POST" action="/clients/{{this._id}}?_method=DELETE">
        <button class="btn btn-link" type="submit">Delete</button>
    </form>
</div>
{{/each}}

<form action="/clients" method="POST">
    <input type="text" name="name">
    <button type="submit">Add client</button>
</form>